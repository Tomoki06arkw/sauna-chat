<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <% if user_signed_in? %>
        <%  if !(current_user.email == 'guest@example.com') %>
        <%= link_to '編集', edit_user_registration_path%>
        <% end %>
      <% end%>
      <table class="table">
        <tbody>
          <% if @user.profile_image? %>
          <%= image_tag @user.profile_image.url %>
          <% else %>
          <%= image_tag "default.png" %>
          <% end %>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="table__col1">サウナ歴</th>
            <td class="table__col2"><%= @user.experience.name %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page--heading">
        <%= "#{@user.name}さんの投稿一覧"%>
      </h2>
      
      <div class="card__wrapper">
          <%= render partial: "chats/chat", collection: @user.chats %>
      </div>
     
      <%= paginate @chats %>
    </div>
  </div>
</div>
<footer>
  <div class="back_to_btn">
    <%= link_to 'トップページに戻る', root_path, class: :back_btn %>
  </div>
</footer>