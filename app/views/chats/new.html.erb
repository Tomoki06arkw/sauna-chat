<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規サ活投稿</h2>
        <%= form_with model: @chat, local: true do |f|%>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="field">
          <%= f.label :sauna_name, "サウナ名" %><br />
          <%= f.text_field :sauna_name, id:"sauna_name" %>
        </div>

        <div class="field">
          <%= f.label :price_id, "値段" %><br />
          <%= f.collection_select(:price_id, Price.all, :id, :name, {}, {class:"select-box", id:"chat-price"}) %>
        </div>

        <div class="field">
          <%= f.label :area_id, "場所" %><br />
          <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"select-box", id:"chat-area"}) %>
        </div>

        <div class="field">
          <%= f.label :sauna_temperature_id, "サウナ温度" %><br />
          <%= f.collection_select(:sauna_temperature_id, SaunaTemperature.all, :id, :name, {}, {class:"select-box", id:"chat-sauna_temperature"}) %>
        </div>

        <div class="field">
          <%= f.label :water_bath_id, "水風呂温度" %><br />
          <%= f.collection_select(:water_bath_id, WaterBath.all, :id, :name, {}, {class:"select-box", id:"chat-water_bath"}) %>
        </div>

        <div class="field">
          <%= f.label :description, "感想" %><br />
          <%= f.text_area :description, placeholder:"100文字までお書き下さい",  class: :form__text, id:"chat_description" %>
        </div>

        <div class="field">
          <%= f.label :image, "サウナの画像" %><br />
          <%= f.file_field :image, id:"chat_image" %>
        </div>

        <div class="actions">
          <%= f.submit "保存する", class: :form__btn  %>
        </div>
        <% end %>
    </div>
  </div>
</div>