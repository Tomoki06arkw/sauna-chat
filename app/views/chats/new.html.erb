<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規サ活投稿</h2>
        <%= form_with model: @chat, local: true do |f|%>
        <div class="field">
          <%= f.label :sauna_name, "サウナ名" %><br />
          <%= f.text_field :sauna_name, id:"sauna_name" %>
        </div>

        <div class="field">
          <%= f.label :price, "値段" %><br />
          <%= f.text_field :price, class: :form__price, id:"chat_price" %>
        </div>

        <div class="field">
          <%= f.label :area_id, "場所" %><br />
          <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"select-box", id:"item-area"}) %>
        </div>

        <div class="field">
          <%= f.label :description, "感想" %><br />
          <%= f.text_area :description, class: :form__text, id:"chat_description" %>
        </div>

        <div class="field">
          <%= f.label :image, "サウナの画像" %><br />
          <%= f.file_field :image, id:"chat_image" %>
        </div>

        <div class="actions">
          <%= f.submit "保存する", class: :form__btn  %>
        </div>
        <% end %>
    </div>
  </div>
</div>